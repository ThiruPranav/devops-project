pipeline {
    agent {
    label ('docker')
    }
    environment {
        dockerImage = ''
    }
    
    stages {
        stage('scm') {
            steps {
               git 'https://github.com/ThiruPranav/devops-project.git'
            }
        }
		stage('build') {
            steps {
               sh 'mvn clean package'
            }
        }
		stage('build image') {
            steps {
               withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
                 dockerImage = docker.build('thirupranav/app')
                dockerImage.push('thirupranav/app')
}
            }
        }
        stage('Kubernetes_deployment') {
          steps {
               sh 'kubectl apply -f Kubernetes_Deployment.yaml'
            }
        }
    }
}