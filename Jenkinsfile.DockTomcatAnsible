pipeline {
    agent {
    label ('ansible')
    }

    stages {
        stage('scm') {
            steps {
               git 'https://github.com/ThiruPranav/devops-project.git'
            }
        }
		stage('build') {
            steps {
               sh 'mvn clean package'
            }
        }
		stage('deploy') {
            steps {
               sh """ansible-playbook docker_tomcat_deploy.yaml --extra-vars '{"path": "${WORKSPACE}"}'"""
            }
        }
    }
}
